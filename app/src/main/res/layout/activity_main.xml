<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/styles_textView_1"
        style="@style/style_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Text 1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/styles_textView_2"
        style="@style/style_1.style_2"
        android:layout_marginTop="32dp"
        android:text="Text 2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/styles_textView_1" />

    <Button
        android:id="@+id/styles_button_1"
        style="@style/style_1"
        android:layout_marginTop="32dp"
        android:text="Button 1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/styles_textView_2" />

    <!-- The textColor "blue" (#000080) overrides the "style_1.style_2" "green" (#008000) color. -->
    <Button
        android:id="@+id/styles_button_2"
        style="@style/style_1.style_2"
        android:textColor="#000080"
        android:layout_marginTop="32dp"
        android:text="Button 2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/styles_button_1" />


</android.support.constraint.ConstraintLayout>